<Window x:Class="NotHumanToday.Animated.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Not Human Today" Height="450" Width="800"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="Root" ClipToBounds="True">
            <Canvas x:Name="CloudLayer"/>
            <Image x:Name="Girl" 
                   Source="Assets/girl.png"
                   Width="200" Height="200"
                   RenderTransformOrigin="0.5,0.5"
                   Stretch="Uniform">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="White"/>
                </Image.Effect>
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="GirlScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="GirlTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:Name="Caption" 
                       Canvas.Left="20" Canvas.Bottom="20"
                       FontSize="24" Foreground="White"/>
            <Border Background="#44FFFFFF" 
                    CornerRadius="4"
                    Canvas.Right="20" Canvas.Top="20"
                    Padding="4">
                <StackPanel Orientation="Horizontal">
                    <Button x:Name="BtnCloud" Content="â˜" Click="BtnCloud_OnClick" 
                            Margin="2" Padding="8,4" FontSize="20"/>
                    <Button Content="â˜”" Click="BtnRain_OnClick"
                            Margin="2" Padding="8,4" FontSize="20"/>
                    <Button x:Name="BtnWind" Content="ðŸŒª" Click="BtnWind_OnClick"
                            Margin="2" Padding="8,4" FontSize="20"/>
                </StackPanel>
            </Border>
        </Canvas>
        <Border x:Name="IntroOverlay"
                Background="#CC0F0F0F"
                Visibility="Visible">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <ScrollViewer Margin="40" VerticalScrollBarVisibility="Auto">
                    <StackPanel HorizontalAlignment="Center">
                        <TextBlock Text="Preview Before You Press Play"
                                   FontSize="28"
                                   Foreground="White"
                                   TextAlignment="Center"
                                   Margin="0,0,0,24"/>
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="â˜ Cloud Scene Â· Drifting Free"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="#FFE6F4FF"
                                       FontSize="16"
                                       Text="Soft blue gradients cradle layered clouds that slide across the sky while the girl glows and floats gently in place."/>
                        </StackPanel>
                        <StackPanel Margin="0,0,0,16">
                            <TextBlock Text="ðŸŒ§ Rain Scene Â· Quiet Disappearance"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="#FFE6F4FF"
                                       FontSize="16"
                                       Text="Muted blue rain falls in delicate streaks as the girl slows down and curls inward at the distant edge of the scene."/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock Text="ðŸŒ« Wind Scene Â· Fragile Freedom"
                                       FontSize="20"
                                       Foreground="White"
                                       Margin="0,0,0,8"/>
                            <TextBlock TextWrapping="Wrap"
                                       Foreground="#FFE6F4FF"
                                       FontSize="16"
                                       Text="Pink and blue gradients fade together while light wind trails sweep across and the girl blurs slightly into the open space."/>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Grid.Row="1" Margin="0,0,0,32" HorizontalAlignment="Center">
                    <Button x:Name="BtnPlay"
                            Content="Play"
                            Width="180"
                            Padding="16,8"
                            FontSize="22"
                            Click="BtnPlay_OnClick"/>
                    <TextBlock Text="Press Play to enter her three weathers."
                               Foreground="#FFE6F4FF"
                               FontSize="14"
                               Margin="0,12,0,0"
                               TextAlignment="Center"/>
                </StackPanel>
                <Button Content="â–¶ Play" 
                        Click="BtnPlay_OnClick"
                        FontSize="24" Padding="20,10"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
            </Grid>

        </Border>
    </Grid>
</Window>
