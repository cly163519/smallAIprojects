<Window x:Class="NotHumanToday.Animated.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Not Human Today" Height="450" Width="800"
        Background="#FF1E1E1E"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Canvas x:Name="Root" ClipToBounds="True">
            <Canvas x:Name="CloudLayer"/>
            <Image x:Name="Girl" 
                   Source="Assets/girl.png"
                   Width="200" Height="200"
                   RenderTransformOrigin="0.5,0.5"
                   Stretch="Uniform">
                <Image.Effect>
                    <DropShadowEffect BlurRadius="15" ShadowDepth="0" Color="White"/>
                </Image.Effect>
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform x:Name="GirlScale" ScaleX="1" ScaleY="1"/>
                        <TranslateTransform x:Name="GirlTranslate" X="0" Y="0"/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>
            <TextBlock x:Name="Caption" 
                       Canvas.Left="20" Canvas.Bottom="20"
                       FontSize="24" Foreground="White"/>
            <Border Background="#44FFFFFF" 
                    CornerRadius="4"
                    Canvas.Right="20" Canvas.Top="20"
                    Padding="4">
                <StackPanel Orientation="Horizontal">
                    <Button Content="☁" Click="BtnCloud_OnClick" 
                            Margin="2" Padding="8,4" FontSize="20"/>
                    <Button Content="☔" Click="BtnRain_OnClick"
                            Margin="2" Padding="8,4" FontSize="20"/>
                    <Button Content="🌪" Click="BtnWind_OnClick"
                            Margin="2" Padding="8,4" FontSize="20"/>
                </StackPanel>
            </Border>
        </Canvas>
    </Grid>
</Window>
